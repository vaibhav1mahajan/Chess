{
  "name": "chess_app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "docker:http-backend:start":"bun run turbo db:migrate && bun run turbo db:generate && cd apps/http-backend && bun run start",
    "docker:websocket:start":"bun run turbo db:migrate && bun run turbo db:generate && cd apps/websocket && bun run start",
    "docker:frontend:start":"cd apps/frontend && bun run start"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "prisma": "^6.5.0"
  }
}
